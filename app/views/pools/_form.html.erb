<%= semantic_form_for @pool do |f| %>
<fieldset>
    <legend>Crear Quiniela</legend>

    <%= f.semantic_errors %>
    <%= f.inputs do %>
        <%= f.input :owner %>
        <%= f.input :schedule %>
        <%= f.input :name %>
        <%= f.input :selected_games, :as => :check_boxes %>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit,:button_html => { :class => "btn btn-large btn-primary"} %>        
    <% end %>
</fieldset>
<% end %>    
