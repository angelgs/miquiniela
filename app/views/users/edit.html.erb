<% provide(:title, "Modifica usuario") %>
<h1>Actualiza datos del usuario</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirma CotraseÃ±a" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Guarda cambios", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Cambiar</a>
  </div>
</div>

