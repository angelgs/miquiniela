<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Start at</th>
      <th>Stadium</th>
      <th>Home team</th>
      <th>Visitor team</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.start_at %></td>
        <td><%= game.stadium_name %></td>
        <td><%= game.team_home_name %></td>
        <td><%= game.team_visitor_name %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

